extends tutor_layout

block content
    h1 质疑举报审批
    table(width='400' border='0' cellpadding='0' cellspacing='1')
        tbody
            each report in reports
                tr
                    if report.report_type === 'grade'
                        td
                            a(href=report.approve_url) #{report.reported_stu.student_name + ' (考试成绩)'}
                        td(align='right') #{report.time}
                    else if report.report_type === 'competition'
                        td
                            a(href=report.approve_url) #{report.reported_stu.student_name + ' (竞赛成绩)'}
                        td(align='right') #{report.time}
                    else if report.report_type === 'output'
                        td
                            a(href=report.approve_url) #{report.reported_stu.student_name + ' (论文专利)'}
                        td(align='right') #{report.time}
                    else
                        li 无审批任务